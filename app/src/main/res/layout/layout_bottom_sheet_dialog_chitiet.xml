<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_chitiet_bottomsheet"
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="@android:dimen/thumbnail_height"
            android:scaleType="fitStart"
            android:src="@drawable/imgslider2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp">
            <TextView
                android:id="@+id/txt_ten_chitiet_bottomsheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salad cá hồi"
                android:fontFamily="@font/inter_semibold"
                android:textSize="28dp"/>
            <TextView
                android:id="@+id/txt_gia_chitiet_bottomsheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="59 000 VNĐ"
                android:fontFamily="@font/inter_semibold"
                android:textSize="24dp"
                android:textColor="@color/orange"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/btn_giam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dau_tru"
                    android:layout_weight="1"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_soluong_chitiet"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:gravity="center"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp" />
                <ImageView
                    android:id="@+id/btn_tang"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dau_cong"
                    android:layout_weight="1"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <Button
            android:id="@+id/btn_huybo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_huybo"
            android:backgroundTint="@color/grey"
            android:textSize="18dp"
            android:fontFamily="@font/inter_light"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/btn_themvaogiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_themvaogiohang"
            android:backgroundTint="@color/orange"
            android:textSize="20dp"
            android:fontFamily="@font/inter_light"
            android:layout_marginStart="5dp"
            />
    </LinearLayout>



</LinearLayout>